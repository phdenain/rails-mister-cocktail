<h1>Cocktails details</h1>

<h1> <%= @cocktail.name %> </h1>

<% @cocktail.doses.each do |dose| %>
  <%= cl_image_tag @article.photo.key, height: 300, width: 400, crop: :fill %>
  <p> Ingredient : <%= dose.ingredient.name %> Description : <%= dose.description %> <%= link_to 'delete', dose_path(dose),  method: :delete %></p>
<% end %>

<%= link_to 'new dose for this cocktail ', new_cocktail_dose_path(@cocktail) %>
<%= link_to 'back to cocktail list', cocktails_path %>



